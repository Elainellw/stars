<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the battlefield!</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/duels/new">Add new duels</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% duels.forEach(function(duel){ %>
            <div class="col-md-6 col-sm-12">
                <div class="thumbnail">
                    <div class="row">
                        <div class="col">
                                <img src="<%= duel.img1 %>">
                        </div>
                        <div class="col">
                                <img src="<%= duel.img2 %>">
                        </div>
                    </div>
                    <div class="caption">
                        <p><strong><%= duel.name1 %> vs <%= duel.name2 %></strong></p>
                        <p>
                            <em>Submitted by <%= duel.author.username%></em>
                        </p>
                    </div>
                    <p>
                      <a href="/duels/<%= duel._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%});%>
    </div>
</div>

<% include partials/footer %>